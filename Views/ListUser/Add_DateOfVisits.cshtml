@model Project_MVC.Entity.DataVisits
@{
    ViewData["Title"] = "Добавление дат";
}
<h1 style="text-align:center">Дата(ы) обследования гражданина</h1>

<head>
    <link rel="stylesheet" type="text/css" href="~/css/virtual-select.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
</head>
<hr />
<br />
<body>
    <div class="row">
        <div class="col-lg-4">
            <form asp-action="Add_DateOfVisits" class="form-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div data-value-key="id">
                    <select asp-for="UserId" id="multipleSelect" name="UserId" placeholder="Начните поиск..." data-search="true" data-silent-initial-value-set="true" asp-items="ViewBag.Users">
                        <option value=""></option>
                    </select>
                </div>
                <br />
                <div class="form-groupe-form">
                    <input type="date" asp-for="Date" class="form-controles-create" />
                    <label>Дата посещения:</label>
                </div>
                <br />
                <div class="form-groupe-form">
                    <textarea asp-for="Notes" placeholder="Комментарий, если они требуются. Например: неисправность печного отопления" class="form-controles-create"></textarea>
                    <label>Заметки</label>
                </div>
                <br />
                <div class="form-groupe-form">
                    <input type="submit" value="Сохранить" class="btn-main-create" />
                    <a asp-action="List_User" class="btn-main">Отменить</a>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="~/js/virtual-select.js"></script>
    <script type="text/javascript">
        VirtualSelect.init({
            ele: '#multipleSelect'
        });
    </script>
    <script src="js/site.js"></script>
</body>