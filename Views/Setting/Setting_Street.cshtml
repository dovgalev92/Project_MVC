@model Project_MVC.Entity.Street
@{
    ViewData["Title"] = "Добавление улиц";
}
<h1 class="teg-h1-center">Добавление улиц</h1>
<hr />
<h4 class="teg-h1-center">Добавьте список улиц</h4>
<br />
<div class="row">
    <div class="col-lg-4">
        <form asp-action="Setting_Street" class="form-center">
            <div>
                <div class="form-groupe-form">
                    <select name="LocalityId" asp-for="LocalityId" class="form-controles-text" asp-items="ViewBag.Locality">
                    </select>
                    <label>Населенный пункт</label>
                </div>
                <br />
                <div class="form-groupe-form">
                    <input type="text" name="Title_Street" class="form-controles-text" />
                    <label>Название улицы</label>
                </div>
                <br />
                <div class="text-center">
                    <input type="submit" value="Добавить" class="btn-main" />
                    <a asp-action="Index" class="btn-main">Назад</a>
                </div>
            </div>
        </form>
    </div>
</div>