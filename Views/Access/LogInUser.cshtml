@model Project_MVC.Models.AccessModel
@{
    ViewData["Title"] = "Окно авторизации и регистрации";
}
<head>
    <link rel="stylesheet" href="~/css/site.css">
    <script src="~/js/site.js" defer></script>
</head>

<div class="diving">
    <article class="form-container">
        <div class="block">
            <section class="block_item block-item">
                <h2 class="block-item_title">У Вас уже есть личный кабинет?</h2>
                <button class="block-item_btn signin-btn">Войти</button>
            </section>
            <section class="block_item block-item">
                <h2 class="block-item_title">У Вас нет личного кабинета?</h2>
                <button class="block-item_btn signup-btn">Регистрация</button>
            </section>
        </div>
        <div class="form-box">
            <!--Форма авторизации-->
            <form asp-action="LogInUser" class="form form_signin">
                <h3 class="form_title">Вход</h3>

                <p>
                    <input type="text" name="Login" class="form_input" placeholder="Логин">
                </p>
                <p>
                    <input type="password" name="Password" class="form_input" placeholder="Пароль">
                </p>
                <p>
                    <button class="form_btn">Войти</button>
                </p>
            </form>

            <!--Форма регистрации-->
            <form asp-action="RegistrUser" class="form form_signup">
                <h3 class="form_title">Регистрация</h3>

                <p>
                    <input type="text" name="Login" class="form_input" placeholder="Логин">
                </p>
                <p>
                    <input type="password" name="Password" class="form_input" placeholder="Пароль">
                </p>
                <p>
                    <input type="password" name="RepeatPassword" class="form_input" placeholder="Подтвердите пароль">
                </p>
                <p>
                    <button class="form_btn form_btn_signup">Зарегистрироваться</button>
                </p>
            </form>
        </div>
    </article>
</div>
